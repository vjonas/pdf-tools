{
  "name": "pdf-organiser",
  "version": "1.0.0",
  "description": "A desktop PDF organizer tool built with Angular and Electron",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron": "NODE_ENV=development electron . --dev",
    "electron:prod": "electron .",
    "electron:dev": "concurrently \"npm run start\" \"wait-on http://localhost:4200 && NODE_ENV=development electron . --dev\"",
    "electron:serve": "ng serve & wait-on http://localhost:4200 && NODE_ENV=development electron . --dev",
    "electron:pack": "npm run build:prod && electron-builder --mac --win",
    "electron:dist": "npm run build:prod && electron-builder --publish=never",
    "electron:debug": "npm run build:prod && electron . --debug",
    "electron:win-x64": "npm run build:prod && electron-builder --win --x64",
    "electron:win-x86": "npm run build:prod && electron-builder --win --ia32",
    "electron:win-arm64": "npm run build:prod && electron-builder --win --arm64",
    "electron:win-all": "npm run build:prod && electron-builder --win --x64 --ia32 --arm64",
    "logs:open": "open ~/Library/Application\\ Support/PDF\\ Organiser/logs || explorer %APPDATA%/PDF\\ Organiser/logs || xdg-open ~/.config/PDF\\ Organiser/logs"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.0.0",
    "@angular/cdk": "^19.0.0",
    "@angular/common": "^19.0.0",
    "@angular/compiler": "^19.0.0",
    "@angular/core": "^19.0.0",
    "@angular/forms": "^19.0.0",
    "@angular/platform-browser": "^19.0.0",
    "@angular/platform-browser-dynamic": "^19.0.0",
    "@angular/router": "^19.0.0",
    "@primeng/themes": "^19.1.3",
    "electron-log": "^5.4.1",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^4.7.76",
    "primeicons": "^7.0.0",
    "primeng": "^19.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0",
    "tailwindcss-primeui": "^0.5.1"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.6",
    "tailwindcss": "3.4.1",
    "@angular-devkit/build-angular": "^19.0.6",
    "@angular/cli": "^19.0.6",
    "@angular/compiler-cli": "^19.0.0",
    "@types/jasmine": "~5.1.0",
    "concurrently": "^8.0.0",
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12",
    "jasmine-core": "~5.4.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.6.2",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.pdforganiser.app",
    "productName": "PDF Organiser",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "public/**/*",
      "public/pdf-worker/pdf.worker.min.js"
    ],
    "asarUnpack": [
      "public/**/*",
      "public/pdf-worker/pdf.worker.min.js"
    ],
    "fileAssociations": [
      {
        "ext": "pdf",
        "name": "PDF Document",
        "description": "Portable Document Format",
        "role": "Viewer"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "fileAssociations": [
        {
          "ext": "pdf",
          "name": "PDF Document",
          "description": "Portable Document Format",
          "icon": "assets/icon.png",
          "role": "Viewer"
        }
      ]
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.png",
      "fileAssociations": [
        {
          "ext": "pdf",
          "name": "PDF Document",
          "description": "Portable Document Format",
          "icon": "assets/icon.png",
          "role": "Viewer"
        }
      ]
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "fileAssociations": [
        {
          "ext": "pdf",
          "name": "PDF Document",
          "description": "Portable Document Format",
          "mimeType": "application/pdf"
        }
      ]
    }
  }
}
